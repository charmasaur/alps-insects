<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="6dip"
    android:id="@+id/species_list_alpha" >

    <ImageView
        android:id="@+id/speciesIcon"
        android:layout_width="@dimen/species_list_thumbnail_size"
        android:layout_height="@dimen/species_list_thumbnail_size"
        android:layout_marginRight="6dip"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/speciesLabel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/speciesIcon"
        android:gravity="center_vertical"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/speciesSublabel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/speciesLabel"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/speciesIcon"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:textSize="14dp" />

</RelativeLayout>
