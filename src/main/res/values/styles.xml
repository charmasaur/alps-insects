<resources>
    <style name="Theme.FieldGuide" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/toolbar_color</item>
        <item name="colorPrimaryDark">@color/status_bar_color</item>
        <item name="searchViewStyle">@style/SearchViewStyle</item>
    </style>

    <style name="Theme.FieldGuide.FullScreen" parent="Theme.FieldGuide">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Theme.FieldGuide.Splash" parent="Theme.FieldGuide">
        <item name="android:background">@drawable/splash</item>
    </style>

    <style name="Theme.FieldGuide.Toolbar" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:dropDownListViewStyle">@style/DropDownListViewStyle</item>
        <item name="android:dropDownItemStyle">@style/DropDownItemStyle</item>
    </style>

    <!-- Use a dark theme for the overflow menu. -->
    <style name="Theme.FieldGuide.ToolbarPopup" parent="ThemeOverlay.AppCompat.Dark">
    </style>

    <!-- Use a custom search suggestion layout so that our icons will be scaled properly. -->
    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="suggestionRowLayout">@layout/search_suggest</item>
    </style>

    <!--
        Not sure why setting android:background seems to be the only way to set the background of
        the drop down list of the search box, but whatever. Stupid Android.
    -->
    <style name="DropDownListViewStyle" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:background">@color/background_material_dark</item>
    </style>

    <!-- In similar hacky spirit, set the text colour explicitly. -->
    <style name="DropDownItemStyle" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textColor">@color/abc_primary_text_material_dark</item>
    </style>

    <!-- text styles -->
    <style name="SpeciesDetailsSubheading">
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">19dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textColor">#eaeaea</item>
        <item name="android:textSize">17dp</item>
    </style>

    <style name="SpeciesDetailsText">
        <item name="android:textSize">15dp</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>


    <!-- table styles -->
    <style name="tablerowstyle">
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:background">#1a1a1a</item>
        <item name="android:layout_margin">0.5dp</item>
    </style>

    <style name="tablerowstylealt">
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:background">#242424</item>
        <item name="android:layout_margin">0.5dp</item>
    </style>
</resources>
