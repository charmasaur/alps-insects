<resources>
    <style name="Theme.FieldGuide" parent="Theme.AppCompat.NoActionBar">
        <item name="dropDownListViewStyle">@style/Theme.FieldGuide.DropDownListView</item>
        <item name="android:dropDownListViewStyle">@style/Theme.FieldGuide.DropDownListView</item>
        
        <item name="actionDropDownStyle">@style/Theme.FieldGuide.DropDownNav</item>
        
    </style>
    
    <style name="Theme.FieldGuide.FullScreen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>
    
    <style name="Theme.FieldGuide.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowFullscreen">true</item>
    </style>
    
    <style name="Theme.FieldGuide.Splash" parent="Theme.FieldGuide.FullScreen">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    
    <!-- actionbar styles -->
    <style name="Theme.FieldGuide.ActionBar" parent="Widget.AppCompat.ActionBar.Solid">

    </style>
    
    <style name="Theme.FieldGuide.DropDownNav" parent="Widget.AppCompat.Spinner.DropDown.ActionBar">
    </style>

    <style name="Theme.FieldGuide.DropDownListView" parent="Widget.AppCompat.ListView.DropDown">
    </style>


    <!-- text styles -->    
    <style name="SpeciesDetailsSubheading">
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">19dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textColor">#eaeaea</item>
        <item name="android:textSize">17dp</item>
    </style>
    
    <style name="SpeciesDetailsText">
        <item name="android:textSize">15dp</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>
    
    
    <!-- table styles -->
    <style name="tablerowstyle">
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:background">#1a1a1a</item>
        <item name="android:layout_margin">0.5dp</item>
    </style>

    <style name="tablerowstylealt">
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:background">#242424</item>
        <item name="android:layout_margin">0.5dp</item>
    </style>
</resources>
