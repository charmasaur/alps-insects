<?xml version="1.0" encoding="UTF-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="au.com.museumvictoria.fieldguide.vic.fork"
    android:versionCode="2"
    android:versionName="1.1" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="false"
        android:hardwareAccelerated="true"
        android:debuggable="false"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.FieldGuide" >
        <activity
            android:name=".ui.SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.FieldGuide.Splash" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.MainActivity"
            android:launchMode="singleTop"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".ui.ImageDetailActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.FieldGuide.FullScreen" >
        </activity>

        <!-- Provides search suggestions for species and it's details. -->
        <provider
            android:name=".provider.FieldGuideContentProvider"
            android:authorities="au.com.museumvictoria.fieldguide.vic.fork.provider.FieldGuideContentProvider"
            android:exported="false" />
        <provider
            android:name=".provider.AssetsProvider"
            android:authorities="au.com.museumvictoria.fieldguide.vic.fork.provider.FieldGuideAssetsProvider"
            android:exported="false" />
        
        <!-- Points to searchable activity so the whole app can invoke search. -->
        <meta-data
            android:name="android.app.default_searchable"
            android:value=".ui.MainActivity" />
    </application>

</manifest>
