<?xml version="1.0" encoding="UTF-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="au.com.museumvictoria.fieldguide.vic.fork"
    android:versionCode="2"
    android:versionName="1.1" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="17" />

    <!-- Required to access Google Play Licensing -->
    <uses-permission android:name="com.android.vending.CHECK_LICENSE" />

    <!-- Required to download files from Google Play -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Required to keep CPU alive while downloading files (NOT to keep screen awake) -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!-- Required to poll the state of the network connection and respond to changes -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Required to check whether Wi-Fi is enabled -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <!-- Required to read and write the expansion files on shared storage -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    

    <application
        android:allowBackup="false"
        android:hardwareAccelerated="true"
        android:debuggable="false"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.FieldGuide" >
        <activity
            android:name=".ui.SplashActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.FieldGuide.FullScreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.MainActivity"
            android:configChanges="orientation"
            android:launchMode="singleTop"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".ui.SpeciesItemDetailActivity"
            android:label="@string/title_item_detail"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".ui.ImageDetailActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.FieldGuide.FullScreen" >
        </activity>
        <activity
            android:name=".ui.DisplayInfoActivity"
            android:label="@string/park_title" >
        </activity>

        <!-- Provides search suggestions for species and it's details. -->
        <provider
            android:name="au.com.museumvictoria.fieldguide.vic.fork.provider.FieldGuideContentProvider"
            android:authorities="au.com.museumvictoria.fieldguide.vic.fork.FieldGuideContentProvider"
            android:exported="false" />
        <provider
            android:name="au.com.museumvictoria.fieldguide.vic.fork.provider.AssetsProvider"
            android:authorities="au.com.museumvictoria.fieldguide.vic.fork.FieldGuideAssestsProvider"
            android:exported="false" />
        
        <service android:name=".service.FieldGuideDownloaderService" />
        <receiver android:name=".service.FieldGuideAlarmReceiver" />

        
        <!-- Points to searchable activity so the whole app can invoke search. -->
        <meta-data
            android:name="android.app.default_searchable"
            android:value=".ui.MainActivity" />
    </application>

</manifest>
